{
    "compilerOptions": {
        "target": "es6",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}